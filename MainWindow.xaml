<Window x:Class="GiroServerOps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GiroServerOps"
        Width="1200" Height="760"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        PreviewKeyDown="Window_PreviewKeyDown"
        xmlns:local="clr-namespace:GiroServerOps">

    <Window.Resources>
        <SolidColorBrush x:Key="BgMatte" Color="#121212"/>
        <SolidColorBrush x:Key="CardMatte" Color="#262626"/>
        <SolidColorBrush x:Key="BorderMatte" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TextMain" Color="#E8EAF0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#9AA0AE"/>

        <Style x:Key="MacCircleButton" TargetType="Button">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FF3B30"/>
            <Setter Property="BorderBrush" Value="#2A0000"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.86"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.72"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HamburgerToggle" TargetType="ToggleButton">
            <Setter Property="Width" Value="33"/>
            <Setter Property="Height" Value="33"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd"
                        Background="#0AFFFFFF"
                        BorderBrush="#19FFFFFF"
                        BorderThickness="1"
                        CornerRadius="12">
                            <Grid Width="18" Height="12">
                                <Rectangle x:Name="Bar1" Height="2" RadiusX="2" RadiusY="2" Fill="#DDE8EEF7" VerticalAlignment="Top">
                                    <Rectangle.RenderTransform>
                                        <TransformGroup>
                                            <RotateTransform Angle="0" CenterX="9" CenterY="1"/>
                                            <TranslateTransform Y="0"/>
                                        </TransformGroup>
                                    </Rectangle.RenderTransform>
                                </Rectangle>

                                <Rectangle x:Name="Bar2" Height="2" RadiusX="2" RadiusY="2" Fill="#D0E8EEF7" VerticalAlignment="Center" Opacity="0.9"/>

                                <Rectangle x:Name="Bar3" Height="2" RadiusX="2" RadiusY="2" Fill="#DDE8EEF7" VerticalAlignment="Bottom">
                                    <Rectangle.RenderTransform>
                                        <TransformGroup>
                                            <RotateTransform Angle="0" CenterX="9" CenterY="1"/>
                                            <TranslateTransform Y="0"/>
                                        </TransformGroup>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0DFFFFFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#29FFFFFF"/>
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bar1" Property="RenderTransform">
                                    <Setter.Value>
                                        <TransformGroup>
                                            <RotateTransform Angle="45" CenterX="9" CenterY="1"/>
                                            <TranslateTransform Y="5"/>
                                        </TransformGroup>
                                    </Setter.Value>
                                </Setter>

                                <Setter TargetName="Bar2" Property="Opacity" Value="0"/>

                                <Setter TargetName="Bar3" Property="RenderTransform">
                                    <Setter.Value>
                                        <TransformGroup>
                                            <RotateTransform Angle="-45" CenterX="9" CenterY="1"/>
                                            <TranslateTransform Y="-5"/>
                                        </TransformGroup>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#08FFFFFF"/>
            <Setter Property="BorderBrush" Value="#14FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="14">
                            <ContentPresenter/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#08FFFFFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="OverlayShow">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Overlay" Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetName="Overlay" Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.15"/>
        </Storyboard>

        <Storyboard x:Key="OverlayHide">
            <DoubleAnimation Storyboard.TargetName="Overlay" Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.15"/>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Overlay" Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.15">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="CurtainOpen">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CurtainHost" Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>

            <DoubleAnimation Storyboard.TargetName="CurtainPanel" Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.10"/>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="CurtainScale" Storyboard.TargetProperty="ScaleY">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.25">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.28" Value="1.02">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.36" Value="0.98">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.44" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="CurtainTranslate" Storyboard.TargetProperty="Y">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="-12">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.28" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.44" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="CurtainClose">
            <DoubleAnimation Storyboard.TargetName="CurtainPanel" Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.18"/>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="CurtainScale" Storyboard.TargetProperty="ScaleY">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.18" Value="0.85">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseIn"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="CurtainTranslate" Storyboard.TargetProperty="Y">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.18" Value="-8">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseIn"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CurtainHost" Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.18">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Border x:Name="Root"
            Background="{StaticResource BgMatte}"
            BorderBrush="{StaticResource BorderMatte}"
            BorderThickness="1"
            CornerRadius="22"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="TopBar"
                  Grid.Row="0"
                  Background="{StaticResource BgMatte}"
                  MouseDown="TopBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="12,0,0,0">
                    
                    <Button x:Name="btnClose"
                            Style="{StaticResource MacCircleButton}"
                            Background="#FF5F57"
                            BorderBrush="#7A1B14"
                            Click="btnClose_Click"/>
                    <Button x:Name="btnMin"
                            Style="{StaticResource MacCircleButton}"
                            Background="#FEBC2E"
                            BorderBrush="#7A5B10"
                            Click="btnMin_Click"/>
                    <Button x:Name="btnMax"
                            Style="{StaticResource MacCircleButton}"
                            Background="#28C840"
                            BorderBrush="#0D5A1A"
                            Click="btnMax_Click"/>
                </StackPanel>
                
                

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Opacity="0.95">
                    <TextBlock Foreground="{StaticResource TextMain}"
                               FontSize="13"
                               FontWeight="SemiBold">
                        <Run Text="Giro"/>
                        <Run Language="es-mx" Text=" Admin"/>
                    </TextBlock>

                    <TextBlock Text="  •  "
                               Foreground="{StaticResource TextMuted}"
                               FontSize="13"/>

                    <TextBlock Text="Console"
                               Foreground="{StaticResource TextMuted}"
                               FontSize="13"/>
                </StackPanel>

                <Grid Grid.Column="2" VerticalAlignment="Center" Margin="0,0,14,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
            Background="{StaticResource BgMatte}"
            BorderBrush="{StaticResource BorderMatte}"
            BorderThickness="0"
            CornerRadius="10"
            Padding="10">
                        <Image Width="40" Height="40"
               Source="giroservops_logo.ico"/>
                    </Border>

                    <ToggleButton x:Name="btnHamburger"
                  Grid.Column="2"
                  Style="{StaticResource HamburgerToggle}"
                  Click="btnHamburger_Click"
                  Checked="btnHamburger_Checked"/>
                </Grid>




                <Border Grid.ColumnSpan="3"
                        VerticalAlignment="Bottom"
                        Height="1"
                        Background="{StaticResource BorderMatte}"
                        Opacity="0.85"/>
                
                 
            </Grid>

            <Grid Grid.Row="1" Margin="25">
                
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!--

                        <StackPanel>
                            <TextBlock Text="Panel principal"
                                       Foreground="{StaticResource TextMain}"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Menú overlay a la izquierda con rebote, encima del contenido."
                                       Foreground="{StaticResource TextMuted}"
                                       Margin="0,6,0,0"
                                       FontSize="13"/>
                        </StackPanel>
                        -->

                        <Border Grid.Row="1"
                            Margin="0,18,0,0"
                            Background="#1A1A1A"
                            BorderBrush="{StaticResource BorderMatte}"
                            BorderThickness="1"
                            CornerRadius="14"
                            Padding="14">
                            <local:DashboardView/>
                        </Border>

                    </Grid>
            </Grid>

            <Border x:Name="Overlay"
                    Grid.RowSpan="2"
                    Background="#1F000000"
                    Opacity="0"
                    Visibility="Collapsed"
                    Panel.ZIndex="50"
                    MouseDown="Overlay_MouseDown"/>

            <Grid x:Name="CurtainHost"
                  Grid.RowSpan="2"
                  Visibility="Collapsed"
                  Panel.ZIndex="60"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Width="420">

                <Grid.RowDefinitions>
                    <RowDefinition Height="46"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="1"
                        x:Name="CurtainPanel"
                        Background="#171717"
                        BorderBrush="#19FFFFFF"
                        BorderThickness="0,0,1,1"
                        CornerRadius="0,0,16,0"
                        Opacity="0"
                        RenderTransformOrigin="0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="28" ShadowDepth="12" Opacity="0.55" Color="#000000"/>
                    </Border.Effect>

                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="CurtainScale" ScaleX="1" ScaleY="230"/>
                            <TranslateTransform x:Name="CurtainTranslate" X="0" Y="-10"/>
                        </TransformGroup>
                    </Border.RenderTransform>

                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="12,14,12,18">

                            <Button Style="{StaticResource MenuButtonStyle}" Tag="#4DA3FF" Click="MenuItem_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="40" Height="40" CornerRadius="12" Background="#14000000" BorderBrush="#14FFFFFF" BorderThickness="1">
                                        <Path Stroke="#4DA3FF" StrokeThickness="2" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Data="M12,6 C12,4.34 8.87,3 5,3 C1.13,3 -2,4.34 -2,6 C-2,7.66 1.13,9 5,9 C8.87,9 12,7.66 12,6 Z
                                                    M-2,6 L-2,11 C-2,12.66 1.13,14 5,14 C8.87,14 12,12.66 12,11 L12,6
                                                    M-2,11 L-2,16 C-2,17.66 1.13,19 5,19 C8.87,19 12,17.66 12,16 L12,11"
                                              RenderTransformOrigin="0.5,0.5">
                                            <Path.RenderTransform>
                                                <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                            </Path.RenderTransform>
                                        </Path>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,12,0" VerticalAlignment="Center">
                                        <TextBlock Text="Base de datos / SQL" Foreground="{StaticResource TextMain}" FontSize="13.5" FontWeight="SemiBold"/>
                                        <TextBlock Text="Consultas, índices, mantenimiento" Foreground="{StaticResource TextMuted}" FontSize="12"/>
                                    </StackPanel>
                                    <!--

                                    <Border Grid.Column="2" VerticalAlignment="Center" CornerRadius="999" Padding="8,4"
                                            Background="#08FFFFFF" BorderBrush="#1FFFFFFF" BorderThickness="1">
                                        <TextBlock Text="SQL" Foreground="{StaticResource TextMain}" FontSize="11" Opacity="0.85"/>
                                    </Border> -->
                                </Grid>
                            </Button>

                            <Button Style="{StaticResource MenuButtonStyle}" Tag="#FFD166" Margin="0,12,0,0" Click="MenuItem_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="40" Height="40" CornerRadius="12" Background="#14000000" BorderBrush="#14FFFFFF" BorderThickness="1">
                                        <Path Stroke="#FFD166" StrokeThickness="2" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Data="M12,6 L12,2
                                                    M9,5 L12,2 L15,5
                                                    M4,8 L20,8
                                                    M6,8 L6,18
                                                    M18,8 L18,18
                                                    M6,18 C6,19.66 7.34,21 9,21 L15,21 C16.66,21 18,19.66 18,18"
                                              />
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,12,0" VerticalAlignment="Center">
                                        <TextBlock Text="Respaldos" Foreground="{StaticResource TextMain}" FontSize="13.5" FontWeight="SemiBold"/>
                                        <TextBlock Text=".bak, retención, verificación" Foreground="{StaticResource TextMuted}" FontSize="12"/>
                                    </StackPanel>

                                   
                                </Grid>
                            </Button>

                            <Button Style="{StaticResource MenuButtonStyle}" Tag="#FF6B6B" Margin="0,12,0,0" Click="MenuItem_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="40" Height="40" CornerRadius="12" Background="#14000000" BorderBrush="#14FFFFFF" BorderThickness="1">
                                        <Path Stroke="#FF6B6B" StrokeThickness="2" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Data="M7,4 L17,4
                                                    M7,8 L17,8
                                                    M7,12 L13,12
                                                    M6,20 L18,20 C19.1,20 20,19.1 20,18 L20,6 C20,4.9 19.1,4 18,4 L6,4 C4.9,4 4,4.9 4,6 L4,18 C4,19.1 4.9,20 6,20 Z"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,12,0" VerticalAlignment="Center">
                                        <TextBlock Text="Logs y sistema" Foreground="{StaticResource TextMain}" FontSize="13.5" FontWeight="SemiBold"/>
                                        <TextBlock Text="Eventos, servicios, errores" Foreground="{StaticResource TextMuted}" FontSize="12"/>
                                    </StackPanel>

                                </Grid>
                            </Button>

                            <Button Style="{StaticResource MenuButtonStyle}" Tag="#9B5CFF" Margin="0,12,0,0" Click="MenuItem_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="40" Height="40" CornerRadius="12" Background="#14000000" BorderBrush="#14FFFFFF" BorderThickness="1">
                                        <Path Stroke="#9B5CFF" StrokeThickness="2" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Data="M4,10 L10,10 L12,8 L14,10 L20,10
                                                    M6,10 L6,20
                                                    M18,10 L18,20
                                                    M10,20 L14,20
                                                    M12,3 L14.2,5.2
                                                    M12,3 L9.8,5.2"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,12,0" VerticalAlignment="Center">
                                        <TextBlock Text="Automatización" Foreground="{StaticResource TextMain}" FontSize="13.5" FontWeight="SemiBold"/>
                                        <TextBlock Text="Jobs, tareas programadas" Foreground="{StaticResource TextMuted}" FontSize="12"/>
                                    </StackPanel>

                                </Grid>
                            </Button>

                            <Button Style="{StaticResource MenuButtonStyle}" Tag="#2EE59D" Margin="0,12,0,0" Click="MenuItem_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="40" Height="40" CornerRadius="12" Background="#14000000" BorderBrush="#14FFFFFF" BorderThickness="1">
                                        <Path Stroke="#2EE59D" StrokeThickness="2" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Data="M12,3 L20,7 L20,13 C20,18 16.6,21.4 12,22 C7.4,21.4 4,18 4,13 L4,7 L12,3 Z
                                                    M9.5,12 L11.3,13.8 L14.8,10"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,12,0" VerticalAlignment="Center">
                                        <TextBlock Text="Seguridad" Foreground="{StaticResource TextMain}" FontSize="13.5" FontWeight="SemiBold"/>
                                        <TextBlock Text="Permisos, accesos, auditoría" Foreground="{StaticResource TextMuted}" FontSize="12"/>
                                    </StackPanel>

                                </Grid>
                            </Button>

                            <Button Style="{StaticResource MenuButtonStyle}" Tag="#FF9F1C" Margin="0,12,0,0" Click="MenuItem_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="40" Height="40" CornerRadius="12" Background="#14000000" BorderBrush="#14FFFFFF" BorderThickness="1">
                                        <Path Stroke="#FF9F1C" StrokeThickness="2" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Data="M4,19 L4,5 C4,3.9 4.9,3 6,3 L18,3 C19.1,3 20,3.9 20,5 L20,19
                                                    M4,15 L8,15 L10,11 L12,17 L14,12 L16,15 L20,15
                                                    M7,21 L17,21"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,12,0" VerticalAlignment="Center">
                                        <TextBlock Text="Monitoreo y diagnóstico" Foreground="{StaticResource TextMain}" FontSize="13.5" FontWeight="SemiBold"/>
                                        <TextBlock Text="Performance, métricas, salud" Foreground="{StaticResource TextMuted}" FontSize="12"/>
                                    </StackPanel>

                                </Grid>
                            </Button>

                            <Button Style="{StaticResource MenuButtonStyle}" Tag="#00D4FF" Margin="0,12,0,0" Click="MenuItem_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="40" Height="40" CornerRadius="12" Background="#14000000" BorderBrush="#14FFFFFF" BorderThickness="1">
                                        <Grid Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Path Stroke="#00D4FF" StrokeThickness="2"
                                              StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
