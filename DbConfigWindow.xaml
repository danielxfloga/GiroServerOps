<Window x:Class="GiroServerOps.DbConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración de conexión"
        Width="560" Height="460"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <SolidColorBrush x:Key="BgMatte" Color="#121212"/>
        <SolidColorBrush x:Key="CardMatte" Color="#262626"/>
        <SolidColorBrush x:Key="BorderMatte" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TextMain" Color="#E8EAF0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#9AA0AE"/>
        <SolidColorBrush x:Key="Accent" Color="#00D4FF"/>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderMatte}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="{StaticResource Accent}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderMatte}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#08FFFFFF"/>
            <Setter Property="BorderBrush" Value="#1FFFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="Root"
            Background="{StaticResource BgMatte}"
            BorderBrush="{StaticResource BorderMatte}"
            BorderThickness="1"
            CornerRadius="22"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="46"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="{StaticResource BgMatte}" MouseDown="TopBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <TextBlock Text="Giro Admin • Conexión"
                               Foreground="{StaticResource TextMain}"
                               FontSize="13"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <Button Grid.Column="1" Width="44" Height="44" Margin="0,0,10,0" Click="Close_Click"
                        Background="Transparent" BorderBrush="Transparent">
                    <TextBlock Text="×" FontSize="18" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>

                <Border Grid.ColumnSpan="2" VerticalAlignment="Bottom" Height="1" Background="{StaticResource BorderMatte}" Opacity="0.85"/>
            </Grid>

            <Grid Grid.Row="1" Margin="18">
                <Border Background="{StaticResource CardMatte}"
                        BorderBrush="{StaticResource BorderMatte}"
                        BorderThickness="1"
                        CornerRadius="18"
                        Padding="18">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Configurar base de datos"
                                   Foreground="{StaticResource TextMain}"
                                   FontSize="18"
                                   FontWeight="SemiBold"/>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Instancia / Servidor" Foreground="{StaticResource TextMuted}" FontSize="12" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtInstance"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Base de datos" Foreground="{StaticResource TextMuted}" FontSize="12" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtDatabase"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,14,0,8">
                            <RadioButton x:Name="rbWindows" Content="Windows (SSPI)" IsChecked="True" Checked="AuthChanged"/>
                            <RadioButton x:Name="rbSql" Content="SQL (usuario/contraseña)" Checked="AuthChanged"/>
                        </StackPanel>

                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Usuario" Foreground="{StaticResource TextMuted}" FontSize="12" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtUser" IsEnabled="False"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Contraseña" Foreground="{StaticResource TextMuted}" FontSize="12" Margin="0,0,0,6"/>
                                <PasswordBox x:Name="txtPass" IsEnabled="False"/>
                            </StackPanel>
                        </Grid>

                        <Border Grid.Row="6" Margin="0,8,0,21"
                                Background="#1A1A1A"
                                BorderBrush="{StaticResource BorderMatte}"
                                BorderThickness="1"
                                CornerRadius="14"
                                Padding="12">
                            <StackPanel>
                                <TextBlock Text="Estado"
                                           Foreground="{StaticResource TextMuted}"
                                           FontSize="12"/>
                                <TextBlock x:Name="txtStatus"
                                           Text="Pendiente."
                                           Foreground="{StaticResource TextMain}"
                                           FontSize="13"
                                           Margin="0,6,0,0"
                                           TextWrapping="Wrap"/>
                                <TextBlock x:Name="txtUdlPath"
                                           Text=""
                                           Foreground="{StaticResource TextMuted}"
                                           FontSize="12"
                                           Margin="0,8,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                            <Button Width="134" Click="Test_Click" Content="Probar"/>
                            <Button Width="155" Click="Save_Click" Content="Guardar"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
